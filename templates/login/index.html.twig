{# templates/login/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <div class="m-0 vh-100 row justify-content-center align-items-center">
        <div class="col-auto p-5 text-center border">
            <form action="{{ path('login') }}" method="post">
                <div class="row" style="margin:10px;">
                    <label style="text-align:left;" for="username">{% trans %}Email{% endtrans %}:</label>
                    <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}"/>
                </div>

                <div class="row" style="margin:10px;">
                    <label style="text-align:left;" for="password">{% trans %}Password{% endtrans %}:</label>
                    <input class="form-control" type="password" id="password" name="_password"/>
                </div>

                {# If you want to control the URL the user is redirected to on success #}
                <input type="hidden" name="_target_path" value="/{{ app.request.locale }}/admin"/>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <div class="row" style="margin:10px;">
                    <button class="btn btn-success" type="submit">{% trans %}Login{% endtrans %}</button>
                </div>
            </form>
            <div style="float:right;margin:10px;">
                <a href="{{ path('app_register') }}">{% trans %}Register{% endtrans %}</a>
            </div>
        </div>
    </div>
{% endblock %}
